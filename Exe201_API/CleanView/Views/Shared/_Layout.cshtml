<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CleanView</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="bg-primary text-white p-3 mb-4">
        <div class="container">
            <h1 class="h3">CleanView</h1>
            <nav>
                <a href="/" class="text-white me-3">Trang chủ</a>
                <a href="/News" class="text-white me-3">Tin tức</a>
                <a href="/Booking" class="text-white me-3">Đặt lịch</a>
                <a href="/User/Profile" class="text-white me-3">Tài khoản</a>
                <a href="/Auth/Login" class="text-white">Đăng nhập</a>
            </nav>
        </div>
    </header>
    <main class="container mb-5">
        @RenderBody()
    </main>
    <footer class="bg-light text-center py-3 mt-auto">
        <div class="container">
            <span class="text-muted">&copy; 2024 CleanView</span>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
