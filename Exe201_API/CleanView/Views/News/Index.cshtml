@model IEnumerable<CleanView.Models.NewsViewModel>

@{
    ViewData["Title"] = "News List";
}

<h2>News List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var news in Model)
        {
            <tr>
                <td>@news.Title</td>
                <td>@news.Author</td>
                <td>@news.CreatedAt.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table> 